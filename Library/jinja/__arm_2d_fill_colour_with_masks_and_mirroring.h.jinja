                            (__TARGET_ADDR),                                    \
                            (__REGION_ADDR),                                    \
                            (__SRC_MSK_ADDR),                                   \
                            (__DES_MSK_ADDR),                                   \
                            (__COLOUR),                                         \
                            (__OPACITY));                                       \
            break;                                                              \
    }                                                                           \
    tResult;                                                                    \
})


