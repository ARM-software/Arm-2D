{%- for has_opacity in [
    ('_and_opacity'),
    ('' ),
    ] 
%}
                        
__OVERRIDE_WEAK
void __arm_2d_impl_ccca8888_tile_fill_to_{{colour_name}}_with_src_mask{{has_opacity}}(
                                    uint32_t *__restrict pwSourceBase,
                                    int16_t iSourceStride,
                                    arm_2d_size_t *__RESTRICT ptSourceSize,

                                    uint8_t *__RESTRICT pchSourceMaskBase,
                                    int16_t iSourceMaskStride,
                                    arm_2d_size_t *__RESTRICT ptSourceMaskSize,

                                    {{colour_int}} *__restrict p{{colour_int_prefix}}TargetBase,
                                    int16_t iTargetStride,
                                    arm_2d_size_t *__RESTRICT ptTargetSize
                                {%- if has_opacity == '_and_opacity' -%}
                                    ,
                                    uint_fast16_t hwOpacity
                                {%- endif -%}
                                )
{
    for (int_fast16_t iTargetY = 0; iTargetY < ptTargetSize->iHeight;) {

        uint32_t *__RESTRICT pwSource = pwSourceBase;

        uint8_t *pchSourceMask = pchSourceMaskBase;

        for (int_fast16_t iSourceY = 0; iSourceY < ptSourceSize->iHeight; iSourceY++) {

            {{colour_int}} *__RESTRICT p{{colour_int_prefix}}Target = p{{colour_int_prefix}}TargetBase;

            uint_fast32_t wLengthLeft = ptTargetSize->iWidth;

            do {
                uint_fast32_t wLength = wLengthLeft < ptSourceSize->iWidth
                                      ? wLengthLeft
                                      : ptSourceSize->iWidth;


            {%- if has_opacity == '_and_opacity' %}
                __arm_2d_helium_ccca8888_blend_to_{{colour_name}}_with_src_mask_and_opacity(
                    pwSource, 
                    pchSourceMask, 
                    p{{colour_int_prefix}}Target, 
                    wLength, 
                    hwOpacity);
            {%- else %}
                __arm_2d_helium_ccca8888_blend_to_{{colour_name}}_with_src_mask(
                    pwSource, 
                    pchSourceMask, 
                    p{{colour_int_prefix}}Target, 
                    wLength);
            {%- endif %}

                p{{colour_int_prefix}}Target += wLength;

                wLengthLeft -= wLength;
            } while (wLengthLeft);

            pwSource += iSourceStride;
            p{{colour_int_prefix}}TargetBase += iTargetStride;

            pchSourceMask += iSourceMaskStride;

            iTargetY++;
            if (iTargetY >= ptTargetSize->iHeight) {
                break;
            }
        }
    }
}

