in [
    (   'ONLY',
        '', 'pchSourceMaskLine++',
        '', 'pwSourceMaskLine++',
        '', 'pchSourceMask += iSourceMaskStride;', 
        '', 'pwSourceMask += iSourceMaskStride;'),
    (   'X_MIRROR',
        'pchSourceMaskLine += iWidth - 1;', 'pchSourceMaskLine--',
        'pwSourceMaskLine += iWidth - 1;', 'pwSourceMaskLine--',
        '', 'pchSourceMask += iSourceMaskStride;', 
        '', 'pwSourceMask += iSourceMaskStride;'),
    (   'Y_MIRROR',
        '', 'pchSourceMaskLine++',
        '', 'pwSourceMaskLine++',
        'pchSourceMask += iSourceMaskStride * (iHeight - 1);', 'pchSourceMask -= iSourceMaskStride;', 
        'pwSourceMask += iSourceMaskStride * (iHeight - 1);', 'pwSourceMask -= iSourceMaskStride;'),
    (   'XY_MIRROR',
        'pchSourceMaskLine += iWidth - 1;', 'pchSourceMaskLine--',
        'pwSourceMaskLine += iWidth - 1;', 'pwSourceMaskLine--',
        'pchSourceMask += iSourceMaskStride * (iHeight - 1);', 'pchSourceMask -= iSourceMaskStride;', 
