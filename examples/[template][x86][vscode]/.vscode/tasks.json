{
    "tasks": [
        {
            "type": "shell",
            "label": "copy32Dll",
            "command":"${workspaceFolder}/sdl2/autoCopy32.bat",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "dependsOn":"copy32Dll",
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build x86(32)",
            "command": "gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-DARM_SECTION(x)= ",
                "-D__va_list=va_list",
                "-g",
                "-O1",
                "-std=gnu11",
                "${workspaceFolder}/*.c",
                "${workspaceFolder}/platform/*.c",
                "${workspaceFolder}/../../Library/Source/*.c",
                "${workspaceFolder}/../../Helper/Source/*.c",
                "${workspaceFolder}/../../examples/common/controls/*.c",
                "${workspaceFolder}/../../examples/common/benchmark/*.c",
                "${workspaceFolder}/../../examples/common/asset/*.c",
                "${workspaceFolder}/platform/math/*.c",
                "-lSDL2main",
                "-lSDL2",
                "-L${workspaceFolder}/sdl2/32/lib",
                "-I${workspaceFolder}/sdl2/32/include/SDL2",
                "-I${workspaceFolder}/../../Library/Include",
                "-I${workspaceFolder}/../../Helper/Include",
                "-I${workspaceFolder}/platform/math",
                "-I${workspaceFolder}/platform/math/dsp",
                "-I${workspaceFolder}",
                "-I${workspaceFolder}/platform",
                "-I${workspaceFolder}/../../examples/common/benchmark",
                "-I${workspaceFolder}/../../examples/common/controls",
                "-o",
                "${workspaceFolder}/build/arm_2d.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "detail": "Debugger generated task"
        },
    ],
    "version": "2.0.0"
}